{
    "source": {
        "include": ["./"],
        "includesPattern": ".js$",
        "excludePattern": "(node_modules/|custom-template/|test/|docs)"
    },
    "plugins": ["plugins/markdown"],
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true
    },
    "opts": {
        "recurse": true,
        "destination": "./docs/",
        "template": "custom-template"
    }
}